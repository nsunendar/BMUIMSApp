@model IMSWebApp.Models.BOMItems

@* @model BomFormVm
@{
    var formId = "bomForm_" + Guid.NewGuid().ToString("N");
} *@

<div class="container mt-4">
<form id="editBOMForm" method="POST">
    @Html.AntiForgeryToken()

    <input type="hidden" name="hdnBussCode" value="@Model.BussCode" />
    <input type="hidden" name="hdnPlantCode" value="@Model.PlantCode" />

    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Item Code</label>
        <div class="col-sm">            
            <input class="form-control" name="ItemCode" value="@Model.ItemCode" maxlength="50" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Item Name</label>
        <div class="col-sm">            
            <input class="form-control" name="ItemName" value="@Model.ItemName" maxlength="100" readonly />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-4 col-form-label">Status</label>
        <div class="col-sm">
            <input type="checkbox" id="Status" name="Status" class="form-check-input" @if(Model.Status == true){ <text>checked</text> } />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Qty Usage</label>
        <div class="col-sm">
            <input class="form-control" type="number" step="1" min="0" name="QtyUsage" value="@(Model.QtyUsage ?? 0)" />
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-3 col-form-label">Satuan</label>
        <div class="col-sm">            
            <input class="form-control" name="Satuan" value="@Model.Satuan" maxlength="20" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-lg-12 mt-4">
            <button type="submit" class="btn btn-success" id="submitEditBOMFGBtn">Save</button>
        </div>
    </div>

</form>
</div>

<script src="~/js/bom.js"></script>
